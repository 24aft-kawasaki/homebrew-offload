[[source]]
url = "https://pypi.org/simple"
verify_ssl = true
name = "pypi"

[packages]

[dev-packages]
# Testing framework
pytest = "~=7.4"
pytest-xdist = "~=3.5"  # Parallel test execution
pytest-timeout = "~=2.2"  # Test timeouts

# Legacy Docker-based tests (still used on Linux CI)
python-on-whales = "~=0.78.0"

[requires]
# Support Python 3.9, 3.10, 3.11, 3.12, 3.13 and 3.14
# Pipenv will match the current installed Python version
python_version = "3"
# Minimum required version: 3.9
# This is enforced at runtime in bin/brew-offload

[scripts]
# Pytest-based tests (all platforms, parallel-safe)
test = "pytest -v tests/test_brew_offload_pytest.py"

# Legacy unittest-based tests (Docker, Linux only)
test-legacy = "python -m unittest tests.test_brew_offload"

# Pytest with parallel execution (CI-optimized)
test-fast = "pytest -v -n auto tests/test_brew_offload_pytest.py"
